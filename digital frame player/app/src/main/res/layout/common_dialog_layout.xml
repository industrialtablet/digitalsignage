<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:minWidth="@dimen/dp260"
    android:layout_centerInParent="true"
    android:paddingTop="@dimen/dp16"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:layout_marginBottom="@dimen/dp16"
        android:gravity="center"
        tools:text="消息提示"
        android:visibility="visible"
        android:textColor="#333333"
        android:textSize="@dimen/sp16" />
    <ImageView
        android:id="@+id/image"
        android:layout_gravity="center"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:lineSpacingExtra="@dimen/dp3"
        android:lineSpacingMultiplier="1.2"
        android:textSize="@dimen/sp14"
        android:textColor="#999999"
        tools:text="提示" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp16"
        android:background="#E4E4E4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:focusable="true"
            android:id="@+id/negtive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:paddingTop="@dimen/dp16"
            android:paddingBottom="@dimen/dp16"
            android:layout_weight="1"
            android:background="@drawable/bk_dialog_btn"
            android:gravity="center"
            android:singleLine="true"
            tools:text="@string/btn_cancel"

            android:textSize="@dimen/sp16" />

        <View
            android:id="@+id/column_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E4E4E4" />

        <Button
            android:focusable="true"
            android:id="@+id/positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp16"
            android:paddingBottom="@dimen/dp16"
            android:background="@drawable/bk_dialog_btn"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/btn_sure"
            android:textSize="@dimen/sp16" />
    </LinearLayout>
</LinearLayout>
